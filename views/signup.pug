extends layout

block content
  h1= title
  a(href='/') Home

  form(method='POST' action='')
    p
      label(for='first_name') First Name: 
      input#first_name(type='text' placeholder='John' name='first_name' value=(undefined === user ? '' : user.first_name))
    p
      label(for='last_name') Last Name: 
      input#last_name(type='text' placeholder='Smith' name='last_name' value=(undefined === user ? '' : user.last_name))
    p
      label(for='username') Username: 
      input#username(type='text' placeholder='johnsmith123' name='username' value=(undefined === user ? '' : user.username))
    p
      label(for='password') Password: 
      input#password(type='password' placeholder='NOT password1' name='password')
    p
      label(for='confirm') Confirm password: 
      input#confirm(type='password' placeholder='NOT password1' name='confirm')
    p
      button(type='submit') Submit

    if errors
      ul
        each error in errors
          li= error.msg
