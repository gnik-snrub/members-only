extends layout

block content
  h1= title
  a(href='/') Home

  form(method='POST' action='')
    p
      label(for='first_name') First Name: 
      input#first_name(type='text' placeholder='John' name='first_name')
    p
      label(for='last_name') Last Name: 
      input#last_name(type='text' placeholder='Smith' name='last_name')
    p
      label(for='username') Username: 
      input#username(type='text' placeholder='johnsmith123' name='username')
    p
      label(for='password') Password: 
      input#password(type='password' placeholder='NOT password1' name='password')
    p
      button(type='submit') Submit
